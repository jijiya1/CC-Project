<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  	
<mapper namespace ="admin">

	<!-- 회원 목록 불러오기 -->
	<select id="getUserList" resultType="userInfoVo">
		select * from user_info
			<include refid="search"></include>
		order by u_createddate desc
	</select>
	
	<!-- 회원 수 불러오기 -->
	<select id="getUserCount" resultType="int">
		select count(*) from user_info
	</select>
	
	<!-- 회원 상세정보 불러오기 -->
	<select id="userDetail" resultType="userInfoVo">
		select * from user_info
		where u_email = #{u_email}
	</select>
	
	<!-- 회원 강제 탈퇴(삭제) -->
	<delete id="userDelete">
		delete from user_info
		where u_email = #{u_email}
	</delete>
	
	<!-- 검색 -->
	<sql id="search">
		<if test="(searchType != null and searchType != '') 
				and (searchKeyword != null and searchKeyword != '')">
			where 
			<if test="searchType == 'u_name'">
				u_name 
			</if>
			<if test="searchType == 'u_email'">
				u_email 
			</if> 
				like '%' || #{searchKeyword} || '%'
		</if>
	</sql>
	
</mapper>