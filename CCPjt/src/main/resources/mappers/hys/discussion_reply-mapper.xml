	<select id="getDiscussionReplyList" resultType="Discussion_ReplyVo">
	select * 
    from(select rownum rnum, a.*
        from ( select * 
        	   from discussion_reply
        	   where b_serialno = #{b_serialno}
               order by r_no desc) a)
    where rnum &gt;= 1 and rnum &lt;=10
	</select>

</mapper>